<%= image_tag @user.image, size: "50x50" %>

<% if @user == current_user %>
  <%= link_to "Edit account", edit_user_path(current_user) %>
<% end %>

<h1><%= @user.username %></h1>
  <% if @user.about %>
    <p><%= @user.about %></p>
  <% else %>
    <%= link_to "Add description", edit_user_path(current_user) if @user == current_user %>
  <% end %>

<h2><%= link_to pluralize(@user.trips.count, 'Trip'), user_trips_path(@user) %></h2>

<!-- list user's trips add edit option if trip.user == current_user -->

<h2>Places</h2>

<ul>
  <% @user.locations.each do |location| %>
    <li><%= location.name %></li>
  <% end %>
</ul>