<section class="trips" data-page="trips-index">
  <h1><%= trips_index_title(@user) %></h1> 

  <div class="trip-navigation">
    <%= add_trip_link(@user) %>

    <%= link_to "All", trips_all_link(@user), class: "trip-category", id: "default-selection" %>

    <%= render collection: @categories, partial: 'trips/trip_category', as: :category, locals: {user: @user} %>
  </div><!-- trip-navigation -->
  
  <!-- <ul>
    <% render collection: @trips, partial: 'trips/trips_index_li', as: :trip %>
  </ul> -->
  <button onclick="setTripShow();loadTripShow('/trips/5')">whee</button>

  <ul id="trips-list"></ul>
</section><!-- trips -->


<script id="trip-index-li-template" type="text/x-handlebars-template">
  <li>
    <a href="/users/{{trip.user_id}}">
      <img class="list-avatar" src="{{userImage}}">
    </a>
      <div class="list-description">
        {{#if <%= nested? %>}}
          <a class="list-title" href="/users/{{trip.user_id}}/trips/{{trip.id}}">{{trip.name}}</a>
          {{locations}} on {{date}}
        {{else}}
          <a class="list-title" href="/trips/{{trip.id}}">{{trip.name}}</a>
          <a class="camo-link strong" href="/users/{{trip.user_id}}">{{trip.user.username}}</a> {{locations}} on {{date}}
        {{/if}}
      </div><!-- list-description -->
    </li>
</script>

<script id="trip-show-template" type="text/x-handlebars-template">
  <h1>{{trip.name}}</h1>

  <a href="/users/{{trip.user_id}}">
  <img class="list-avatar" src="{{userImage}}">
</a>


  <div>
      <a class="camo-link" href="/users/{{trip.user_id}}">{{trip.user.username}}</a>
       <a href="/users/{{trip.user_id}}/trips">({{userTripCount}})</a>
      <br>
      {{{userTagline}}}
  </div>
  <br>

  {{locationsLabel}}: {{locations}}
  <br>

  Date: {{date}}
  <br>

  {{categoriesLabel}}: {{categories}}
  <br><br>

  <p>{{trip.note}}</p>

  created on {{created_date}}

  {{#if <%= authorized?(@user) %>}}
    <br><br>
    <a class="link-as-button ghost" href="/users/{{trip.user_id}}/trips/1/edit">Edit</a> <a class="link-as-button ghost" rel="nofollow" data-method="delete" href="/trips/1">Delete</a>
  {{/if}}
  <br><br>
  {{#if <%= nested? %>}}
    {{#if prevTrip}}
      <a class="link-as-button ghost prev" href="/users/{{trip.user_id}}/trips/{{prevTrip}}">&lt;&lt;</a>
    {{/if}}
    {{#if nextTrip}}
      <a class="link-as-button ghost next" href="/users/{{trip.user_id}}/trips/{{nextTrip}}">&gt;&gt;</a>
    {{/if}}
  {{else}}
    {{#if prevTrip}}
      <a class="link-as-button ghost prev" href="/trips/{{prevTrip}}">&lt;&lt;</a>
    {{/if}}
    {{#if nextTrip}}
      <a class="link-as-button ghost next" href="/trips/{{nextTrip}}">&gt;&gt;</a>
    {{/if}}
  {{/if}}
</script>