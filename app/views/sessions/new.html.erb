<!-- create into a validation_errors(object) helper -->
<h2>Log In</h2>

<% if @user.errors.any? || flash[:alert] %>
  <h3>There <%= @user.errors.count < 2 ? 'was' : 'were' %> <%= pluralize(@user.errors.any? ? @user.errors.count : '1', "error") %>:</h3>
  <ul> 
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    <% if flash[:alert] %>
      <li><%= flash[:alert] %></li>
    <% end %>
  </ul>
<% end %>

<%= link_to "Log in with Facebook", "/auth/facebook" %>

<br> <br> or <br><br>

<%= form_for @user, url: login_path, method: :post do |f| %>

  <%= f.email_field :email, placeholder: "Email" %> 
  <%= f.password_field :password, placeholder: "Password" %> 
  <br>
  <%= f.submit 'Log in' %>
<% end %>

<p>Don't have an account? <%= link_to "Sign up.", signup_path %></p>

