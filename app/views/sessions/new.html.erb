<h2>Log In</h2>

<%= facebook_auth_link %>

<br> <br> or Use Email<br><br>

<%= error_alert(@user.errors) %>

<div class="form">
  <%= form_for @user, url: login_path, method: :post do |f| %>

    <%= f.email_field :email, placeholder: "Email" %>
    <%= error_message("Email", @user.errors[:email]) %>
    <br>
    <%= f.password_field :password, placeholder: "Password" %>  
    <%= error_message("Password", @user.errors[:password]) %>
    <br>
    <%= f.submit 'Log in' %>
  <% end %>
</div><!--  form -->

<br>

<p>Don't have an account? <%= sign_up_link %>.</p>

