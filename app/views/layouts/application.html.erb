<!DOCTYPE html>
<html>
  <head>
    <title>Travelogger</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <% if flash[:alert] %>
        <h3>Alert:</h3>
        <p><%= flash[:alert] %></p>
      <% end %>

  <% if logged_in? %>
    <p>Status: Logged in
      
    <%= link_to "Log Out", logout_path, method: :delete %> </p>
  <% end %> <br> <br>

    <%= yield %>
  </body>
</html>
