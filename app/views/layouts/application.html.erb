<!DOCTYPE html>
<html>
  <head>
    <title>Travelogger</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,700|Open+Sans:300,300i,400,400i,700,700i,900" rel="stylesheet">

  </head>

  <body>

      <% if flash[:alert] %>
        <h3>Alert:</h3>
        <p><%= flash[:alert] %></p>
      <% end %>


    <%= link_to "Trips", trips_path %>
    <%= link_to "Travellers", users_path %>
  <% if logged_in? %>
    <%= link_to "#{current_user.username}", user_path(current_user) %>
    <%= link_to "Log Out ", logout_path, method: :delete %>
  <% else %> <br> <br>
    <%= link_to "Sign up", signup_path %>
    <%= link_to "Log in", login_path %>
  <% end %> 
  
  <br><br>
  
    <%= yield %>
  </body>
</html>
