<!DOCTYPE html>
<html>
  <head>
    <title>Travelogger</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,700|Open+Sans:300,300i,400,400i,700,700i,900" rel="stylesheet">

  </head>

  <body>

    <%= render 'shared/alert' %>
    
    <% if current_page?('/') %>
      <%= yield %>
    <% else %>
      <%= render 'shared/navigation' %>
      
      <main>
        <%= yield %>
      </main>
    <% end %>

    <%= render 'shared/footer' %>

  </body>
</html>
